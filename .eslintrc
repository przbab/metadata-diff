{
    "env": {
        "browser": true,
        "jest/globals": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "plugin:jest/recommended",
        "prettier"
    ],
    "globals": {},
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "script",
        "ecmaFeatures": {
            "modules": false
        }
    },
    "plugins": [
        "eslint-plugin-babel",
        "jest",
        "prettier"
    ],
    "rules": {
        "no-console": "off",
        "global-require": "off",
        "import/exports-last": "error",
        "import/extensions": "off",
        "import/no-extraneous-dependencies": "off",
        "import/no-unresolved": [
            "warn"
        ],
        "import/order": [
            "error",
            {
                "newlines-between": "never"
            }
        ],
        "jest/consistent-test-it": [
            "error",
            {
                "fn": "test"
            }
        ],
        "max-len": [
            "error",
            120,
            {
                "ignoreComments": true,
                "ignoreRegExpLiterals": true,
                "ignoreStrings": true,
                "ignoreTemplateLiterals": true,
                "ignoreTrailingComments": true,
                "ignoreUrls": true,
                "tabWidth": 4
            }
        ],
        "no-irregular-whitespace": [
            "error",
            {
                "skipComments": false,
                "skipRegExps": false,
                "skipStrings": false,
                "skipTemplates": false
            }
        ],
        "no-plusplus": [
            "error",
            {
                "allowForLoopAfterthoughts": true
            }
        ],
        "no-use-before-define": [
            "error",
            {
                "classes": true,
                "functions": false,
                "variables": true
            }
        ],
        "padding-line-between-statements": [
            "error",
            {
                "blankLine": "always",
                "next": "return",
                "prev": "*"
            },
            {
                "blankLine": "any",
                "next": "return",
                "prev": [
                    "block-like",
                    "const",
                    "let",
                    "var"
                ]
            },
            {
                "blankLine": "always",
                "next": "export",
                "prev": "*"
            },
            {
                "blankLine": "any",
                "next": "export",
                "prev": "export"
            }
        ],
        "prefer-destructuring": "off",
        "prefer-promise-reject-errors": "off",
        "prettier/prettier": [
            "error",
            {
                "printWidth": 120,
                "singleQuote": true,
                "tabWidth": 4,
                "trailingComma": "es5"
            }
        ]
    }
}